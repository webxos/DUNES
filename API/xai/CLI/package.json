{
  "name": "my-grok-project",
  "version": "1.0.0",
  "description": "A project using grok-cli-hurry-mode for AI-driven development",
  "scripts": {
    "ai-lint": "grok -p 'fix lint errors in src/' -d . --max-tool-rounds 20",
    "ai-test": "grok -p 'run npm test, suggest fixes' -d . --max-tool-rounds 20",
    "ai-docs": "grok -p '/docs generate README' -d ."
  },
  "dependencies": {
    "grok-cli-hurry-mode": "^1.0.87"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc --noEmit"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && grok -p 'lint-fix staged files' --max-tool-rounds 10"
    }
  },
  "license": "MIT"
}